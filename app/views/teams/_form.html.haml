= form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :members
    = f.text_field :members
  .field
    = f.label :image_url
    = f.text_field :image_url
  .field
    = f.label :event_id
    = f.text_field :event_id
  .actions
    = f.submit 'Save'
